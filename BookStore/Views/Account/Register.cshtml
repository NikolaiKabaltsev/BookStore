@model BookStore.ViewModels.RegisterModel

<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Email" class="col-md-2 control-label">Введите Email</label><br />
            <div class="col-md-4">
                <input type="text" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" />
            </div>
        </div>
        <div>
            <label asp-for="Password" class="col-md-2 control-label">Введите пароль</label><br />
            <div class="col-md-4">
                <input asp-for="Password" class="form-control"/>
                <span asp-validation-for="Password" />
            </div>
        </div>
        <div>
            <label asp-for="ConfirmPassword" class="col-md-2 control-label">Повторите пароль</label><br />
            <div class="col-md-4">
                <input asp-for="ConfirmPassword" class="form-control"/>
                <span asp-validation-for="ConfirmPassword" />
            </div>
        </div>
        <div>
            <input type="submit" value="Зарегистрироваться" class="btn btn-default"/>
        </div>
    </div>
</form>
